<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.SES.mapper.DeviceModeMapper">

    <!-- 更新设备模式（动态字段更新） -->
    <update id="update" parameterType="com.SES.entity.DeviceMode">
        UPDATE device_mode
        <set>
            <if test="name != null">
                name = #{name},
            </if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>