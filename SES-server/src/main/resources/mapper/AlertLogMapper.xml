<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.SES.mapper.AlertLogMapper">

    <!-- 结果映射 -->
    <resultMap id="AlertLogDataResultMap" type="com.SES.dto.log.AlertLogDataDTO">
        <result property="time" column="time"/>
        <result property="level" column="level"/>
        <result property="status" column="status"/>
        <result property="modeName" column="mode_name"/>
        <result property="policyName" column="policy_name"/>
        <result property="message" column="message"/>
    </resultMap>

    <!-- 查询指定时间段内的警报日志 -->
    <select id="getLogsByDeviceIdAndTimeRange" resultMap="AlertLogDataResultMap">
        <![CDATA[
        SELECT
            time,
            level,
            status,
            mode_name,
            policy_name,
            message
        FROM alert_log
        WHERE device_id = #{deviceId}
          AND time >= #{startTime}
          AND time <= #{endTime}
        ORDER BY time DESC
        ]]>
    </select>

</mapper>