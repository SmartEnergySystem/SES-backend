<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.SES.mapper.SimDeviceMapper">

    <!-- 更新模拟设备（支持动态字段更新） -->
    <update id="update" parameterType="SimDevice">
        UPDATE sim_device
        <set>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="modeName != null">
                mode_name = #{modeName},
            </if>
            <if test="deviceId != null">
                device_id = #{deviceId}
            </if>
        </set>
        WHERE device_id = #{deviceId}
    </update>
</mapper>
