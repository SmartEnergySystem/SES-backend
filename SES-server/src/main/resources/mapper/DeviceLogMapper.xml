<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.SES.mapper.DeviceLogMapper">

    <!-- 结果映射 -->
    <resultMap id="DeviceLogDataResultMap" type="com.SES.dto.log.DeviceLogDataDTO">
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
        <result property="status" column="status"/>
        <result property="modeName" column="mode_name"/>
        <result property="policyName" column="policy_name"/>
        <result property="power" column="power"/>
    </resultMap>

    <!-- 查询最新一条日志的部分字段 -->
    <select id="getLatestDataByDeviceId" resultMap="DeviceLogDataResultMap">
        SELECT
            start_time, end_time, status, mode_name, policy_name, power
        FROM device_log
        WHERE device_id = #{deviceId}
        ORDER BY end_time DESC
        LIMIT 1
    </select>

</mapper>